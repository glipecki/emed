<?xml version="1.0" encoding="utf-8" ?>
<!-- Default emed backend application configuration -->
<emed-configuration>

	<!-- Database configuration -->
	<!-- By default application will use in memory H2 demo database -->
	<!-- Test H2 database in file: jdbc:h2:file:emed_demo.h2.db;DB_CLOSE_DELAY=-1 -->
	<database>
		<!-- Run application in demo mode, will fill database with test data -->
		<!-- Runs in demo mode if value is equal to "demo", production mode in all other cases (especially if null) -->
		<mode></mode>
		<!-- Database JDBC driver -->
		<driver>org.h2.Driver</driver>
		<!-- Database connection url -->
		<url>jdbc:h2:mem:emed_demo;DB_CLOSE_DELAY=-1</url>
		<!-- Database connection username -->
		<username>sa</username>
		<!-- Database connection password for username -->
		<password></password>
	</database>

</emed-configuration>