<configuration>

	<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{MM-dd HH:mm:ss,SSS} %-4t %-5p [%40c{2}] [%20M{2}] [%4L] : %m%n</pattern>
		</encoder>
	</appender>

	<appender name="file_emed" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>logs/emed.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>logs/emed.%d{yyyy-MM-dd}.log</fileNamePattern>
			<maxHistory>30</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%d{MM-dd HH:mm:ss,SSS} %-4t %-5p [%40c{2}] [%20M{2}] [%4L] : %m%n</pattern>
		</encoder>
	</appender>

	<logger name="eu.anmore" level="trace">
		<appender-ref ref="stdout" />
	</logger>

	<!-- <logger name="eu.anmore.emed" level="trace"> -->
	<!-- <appender-ref ref="file_emed" /> -->
	<!-- </logger> -->

</configuration>